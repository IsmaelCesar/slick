<div>
  <h1>Welcome <%= @user.name %></h1>
  <p>Your email is: <%= @user.email %></p>
  <%= form_with url: messaging_contacts_create_path, remote: true , id: 'form-actions' do |f|%>
    <%= f.button 'Logout', id: 'btn-logout' %>
    <%= f.button 'Add new contact', id: 'btn-add-new-contact' %>
  <% end %>  
</div>

<table border="1px">
  <thead>
    <tr>
      <th> Name </th>
      <th> Email </th>
    </tr>
  </thead>
  <tbody>
    <% if !@user.contacts.empty? %>
      <% @user.contacts.each do |contact|%>
        <tr>
          <td> <%= contact.name %> </td>
          <td> <%= contact.email %> </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="1"> No contacts have been added </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= javascript_pack_tag "messaging/contacts" %>
