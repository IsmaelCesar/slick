<section class="message-content-container <%= message.user.id == current_user.id ? 'user-message' : 'contact-message' %>">
  <section class="message-content">
    <p> 
      <%= message.content %>
    </p>
  </section>
  <section class="user-data"> 
    <div class="user-image">
      <% if message.user.user_image_url %>
        <%= image_tag message.user.user_image_url, width: 20 %>
      <% else %>
        <div>
          <i class="fas fa-user"></i>
        </div>
      <% end %>
    </div>
    <div class="user-name">
      <%= message.user.name %>
    </div>
  </section>
</section>